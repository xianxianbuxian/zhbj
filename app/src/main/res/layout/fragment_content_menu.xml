<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <view.Noscrollviewpager
        android:id="@+id/vp_fgm_content"
        android:layout_width="match_parent"
        android:layout_height="480dp">

    </view.Noscrollviewpager>


    <RadioGroup
        android:id="@+id/rg_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_tab_bg"
        android:orientation="horizontal">

        <RadioButton
            android:checked="true"
            android:id="@+id/rb_home"
            style="@style/button_tab_style"
            android:drawableTop="@drawable/select_ab_home"
            android:text="首页"

            />

        <RadioButton
            android:id="@+id/rb_news"
            style="@style/button_tab_style"

            android:drawableTop="@drawable/select_ab_news"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_starmt"
            style="@style/button_tab_style"

            android:drawableTop="@drawable/select_ab_starmt"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_gov"
            style="@style/button_tab_style"
            android:drawableTop="@drawable/select_ab_gov"

            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_setting"
            android:drawableTop="@drawable/select_ab_setting"
            style="@style/button_tab_style"

            android:text="设置" />
    </RadioGroup>
</LinearLayout>